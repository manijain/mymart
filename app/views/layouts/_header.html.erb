<div class="navbar-wrapper">
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Money Mart</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
              <li><a>Welcome !! <%= current_customer.first_name.capitalize %></a></li>
              <li><%= link_to "My Orders", my_orders_orders_path %></li>
              <li><%= link_to "Log out", destroy_customer_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Login", new_customer_session_path %></li>
              <li><%= link_to "Register", new_customer_registration_path %></li>
            <% end %>
            <% if @cart && @cart.order_items.present? %>
              <% notification = "badge1" %>
              <% total_count = @cart.order_items.count %>
            <% else %>
              <% notification = "" %>
              <% total_count = "" %>
            <% end %>
            <li><a href="javascript:void(0);" id="cart-section" class="<%=notification%>" data-badge="<%=total_count%>"><span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Cart</a></li>
          </ul>
        </div>
      </div>
    </nav>
