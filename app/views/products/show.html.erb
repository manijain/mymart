<%= link_to 'Back', root_path, :class => "btn btn-default" %><hr/>

<div class="jumbotron">
  <div class="row">
    <div class="col-sm-4">
      <p>
        <img class="img-thumbnail" src="<%= @product.picture.url(:medium) %>" alt="<%=@product.title%>">
      </p>
    </div>
    
    <div class="col-sm-8 product-show">
      <p>
        <%= @product.title.capitalize %>
      </p>

      <p>        
        <%= @product.description %> | <%= @product.price %>
      </p>

      <%= link_to "Add to Cart", order_items_path(product_id: @product.id), remote: true, method: :post, class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>

