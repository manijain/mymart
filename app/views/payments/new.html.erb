<%= render partial: 'layouts/cart_details', locals: {order: @order} %>
<%#= link_to "Edit address", edit_order_path(params[:order_id]) %>

  <ul class="nav nav-tabs">
    <li class="active"> <a href="#address" data-target="#address" data-toggle="tab">Delivery Address</a></li>
    <li><a href="#payment" data-target="#payment" data-toggle="tab" class="disabled">Payment Details</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane" id="address">
      <%= render partial: 'customer_addresses/edit', local: {address: @order.customer_address } %>
    </div>
    <div class="tab-pane active fade in" id="payment">
      <h3>Please Enter Your Payment Details</h3>
      <%= form_tag '/payments/checkout', role: 'form', id: 'payment-form' do %>
      <div class="form-group">
        <%= label_tag 'Cardholder name' %>
        <%= text_field_tag 'Cardholder name', nil, name: nil, placeholder: 'Cardholder name', data: {'braintree-name' => 'cardholder_name'}, class: 'form-control', :required => true %>
      </div>
      <div class="form-group">
        <%= label_tag 'Card number - (between 12 to 19 digit)' %>
        <%= text_field_tag 'Card number', nil, name: nil, placeholder: 'Card number', data: {'braintree-name' => 'number'}, class: 'form-control', :required => true %>
      </div>
      <div class="form-group">
        <%= label_tag 'Cvv number - (3 digit number)' %>
        <%= password_field_tag 'Cvv number', nil, name: nil, placeholder: 'CVV', data: {'braintree-name' => 'cvv'}, class: 'form-control', :pattern=>"[0-9]{3,4}", :required => true %>
      </div>
      <div class="form-group">
        <%= label_tag 'Month - (MM)' %>
        <%= text_field_tag 'Month', nil, name: nil, placeholder: 'Month in MM format', data: {'braintree-name' => 'expiration_month'}, class: 'form-control', :pattern=>"[0-9]{2}", :required => true %>
        <%= label_tag 'Year - (YYYY)' %>
        <%= text_field_tag 'Year', nil, name: nil, placeholder: 'Year in YY format', data: {'braintree-name' => 'expiration_year'}, class: 'form-control', :pattern=>"[0-9]{4}", :required => true %>
      </div>
      <%= hidden_field_tag 'total_price', @total %>
      <%= hidden_field_tag 'order_id', @order.id %>
      <div class="form-group">
        <%= submit_tag 'Submit', class: 'btn btn-default' %>
      </div>
      <% end %>
    </div>
  </div>

<script type="text/javascript">
  $(document).ready(function() {
    braintree_setup("<%=@client_token%>");
  });
</script>