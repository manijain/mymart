<%= form_for(@customer_address) do |f| %>
<% if @customer_address.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@customer_address.errors.count, "error") %>
prohibited this order from being saved:</h2>
<ul>
<% @customer_address.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>
<div class="form-group">
<%= f.label :address1 %><br />
<%= f.text_field :address1, :class=> "form-control", autofocus: true %>
</div>
<div class="form-group">
<%= f.label :address2 %> (optional)<br />
<%= f.text_field :address2, :class=> "form-control" %>
</div>
<div class="form-group">
<%= f.label :city %><br />
<%= f.text_field :city, :class=> "form-control" %>
</div>
<div class="form-group">
<%= f.label :district %><br />
<%= f.text_field :district, :class=> "form-control" %>
</div>
<div class="form-group">
<%= f.label :state %><br />
<%= f.text_field :state, :class=> "form-control" %>
</div>
<div class="form-group">
<%= f.label :country %><br />
<%= f.select :country, options_for_select(CustomerAddress::COUNTRIES), {:prompt => "-- Please select country --"}, class: "form-control" %>
</div>
<div id="error-message" class="error">
</div>
<div class="form-group">
<%= f.label :pincode %><br />
<%= f.number_field :pincode, :class=> "form-control" %>
</div>
<div class="form-group">
<%= f.label :contact_details %><br />
<%= f.number_field :contact_details, :class=> "form-control" %>
</div>
<div class="actions">
<%= f.submit 'Place Order', class: "btn btn-success" %>
</div>
<% end %>